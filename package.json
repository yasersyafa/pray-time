{
  "name": "pray-time",
  "displayName": "Pray Time",
  "description": "Reminder for pray",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pray-time.welcome-message",
        "title": "Welcome Message",
        "category": "Pray Time"
      }
    ],
    "configuration": {
      "title": "Pray Time",
      "properties": {
        "pray-time.welcome-message.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable welcome message."
        },
        "pray-time.welcome-message.city": {
          "type": "string",
          "enum": [
            "Jakarta",
            "London",
            "Makkah"
          ],
          "default": "Jakarta",
          "description": "Select city for adhan time"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "moment": "^2.30.1"
  }
}
